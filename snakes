# подключение модулей
import pygame
# константы
WINDOW_SIZE = WINDOW_WIDTH, WINDOW_HEIGHT = (300,300)
# переменный и инициализация
pygame.init()
screen = pygame.display.set_mode(WINDOW_SIZE)
# цикл программы
while True:
    # условие закрытия
    for event in pygame.event.get():
        if event.TYPE == pygame.QUIT:
            exit()
